<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<table class = "table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th scope="col">Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
       <div class ="d-flex flex-row">
        <div>
        <th scope="row"></th>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.category %></td>
        </div>
        <div>
        <td class="btn btn-primary btn-sm"><%= link_to 'Show', restaurant %></td>
        <td class="btn btn-primary btn-sm"><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td class="btn btn-secondary btn-sm"><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </div>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

