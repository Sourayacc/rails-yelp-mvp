<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>categorystrong>
  <%= @restaurant.category %>
</p>

<h2> All reviews </h2>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.content %> <%= link_to "Delete", review_path(review), method: :delete, data: { confirm: "Are your Sure ?" }, class: "btn btn-red" %> </li>

  <% end %>
</ul>

<%= link_to 'Edit', edit_restaurant_path(@restaurant), class: "btn btn-primary" %> |
<%= link_to 'Back', restaurants_path, class: "btn btn-primary" %>
<%= link_to "Add Review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
